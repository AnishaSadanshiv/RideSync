<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82B2DB"
    android:backgroundTint="#82B2DB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="SignUp"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" />

        <EditText
            android:id="@+id/editTextText13"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/full_name"
            android:drawablePadding="20dp"
            android:drawableTint="@color/cardview_dark_background"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="text"
            android:padding="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/editTextText14"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/number"
            android:drawablePadding="20dp"
            android:drawableTint="@color/cardview_dark_background"
            android:ems="10"
            android:hint="Mobile no."
            android:inputType="text"
            android:padding="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextText13" />

        <EditText
            android:id="@+id/editTextText9"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="20dp"
            android:drawableTint="@color/cardview_dark_background"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:padding="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextText14" />

        <EditText
            android:id="@+id/editTextText10"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/profile_icon"
            android:drawablePadding="20dp"
            android:drawableTint="@color/cardview_dark_background"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:padding="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextText9" />

        <EditText
            android:id="@+id/editTextText11"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="20dp"
            android:drawableTint="@color/cardview_dark_background"
            android:ems="10"
            android:hint="Password"
            android:inputType="text"
            android:padding="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextText10" />

        <EditText
            android:id="@+id/editTextText12"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/confirm_password"
            android:drawablePadding="20dp"
            android:drawableTint="@color/cardview_dark_background"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="text"
            android:padding="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextText11" />

        <Button
            android:id="@+id/button4"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#0F8BE1"
            android:gravity="center"
            android:padding="20dp"
            android:text="SignUp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextText12" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>